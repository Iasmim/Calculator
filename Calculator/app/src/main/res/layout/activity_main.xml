<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="15dp"
    >
    <TextView android:text=""  android:id="@+id/texto"
        android:padding="50dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />


<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TableRow >
        <Button android:id="@+id/n0" android:textSize="15pt" android:text="0" />
        <Button  android:id="@+id/div" android:textSize="15pt" android:text="/"/>
        <Button  android:id="@+id/mult" android:textSize="15pt" android:text="x"/>
        <Button  android:id="@+id/minus" android:textSize="15pt" android:text="-"/>

    </TableRow>
    <TableRow>
        <Button  android:id="@+id/n7" android:textSize="15pt" android:text="7"/>
        <Button  android:id="@+id/n8" android:textSize="15pt" android:text="8"/>
        <Button  android:id="@+id/n9" android:textSize="15pt" android:text="9"/>
        <Button  android:id="@+id/plus" android:textSize="15pt" android:text="+"/>
    </TableRow>
    <TableRow>
        <Button  android:id="@+id/n4" android:textSize="15pt" android:text="4"/>
        <Button  android:id="@+id/n5" android:textSize="15pt" android:text="5"/>
        <Button  android:id="@+id/n6" android:textSize="15pt" android:text="6"/>
        <Button android:id="@+id/point" android:textSize="15pt" android:text="."/>
    </TableRow>
    <TableRow>
        <Button android:id="@+id/n1" android:textSize="15pt" android:text="1"/>
        <Button android:id="@+id/n2" android:textSize="15pt" android:text="2"/>
        <Button android:id="@+id/n3" android:textSize="15pt" android:text="3"/>
        <Button android:id="@+id/enter" android:textSize="15pt" android:text="="/>
    </TableRow>

    </TableLayout>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clean"
        android:text="CLEAN"
        android:textSize="15pt"/>
</LinearLayout>
